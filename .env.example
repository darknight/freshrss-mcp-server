# FreshRSS API Configuration
FRESHRSS_API_URL=https://your-freshrss-instance/api/greader.php
FRESHRSS_USERNAME=your_username
FRESHRSS_API_PASSWORD=your_api_password

# Optional: Request timeout in seconds (default: 30)
# REQUEST_TIMEOUT=30

# Optional: Default article limit (default: 100)
# DEFAULT_ARTICLE_LIMIT=100

# MCP Server Configuration
# Transport mode: "stdio" for local (Claude Desktop), "sse" for HTTP server (default: sse)
# MCP_TRANSPORT=sse

# HTTP server host (default: 0.0.0.0)
# MCP_HOST=0.0.0.0

# HTTP server port (default: 8080)
# MCP_PORT=8080
